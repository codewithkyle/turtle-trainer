{
    "compilerOptions": {
        "outDir": "./_compiled",
        "sourceMap": false,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./utils/scripts",
        "allowJs": true,
        "paths": {
            "Module": ["Module"],
            "Application": ["Application"],
            "Env": ["Env"]
        },
        "lib": [
            "dom",
            "scripthost",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ]
    },
    "exclude": [
        "./node_modules",
        "./_compiled",
        "./build-tools",
        "webpack.config.js",
        "./docs/assets",
        "./modules"
    ]
}
